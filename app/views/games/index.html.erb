<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>
<%= link_to 'Admin', admin_user_session_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release year</th>
      <th>Price</th>
      <th>Description</th>
      <th>Poster url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= paginate @games %>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.release_year %></td>
        <td><%= game.price %></td>
        <td><%= game.description %></td>
        <td><%= game.poster_url %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>

